<flash_behavior version="1.0">

<!--Below is where and how we define the behavior and its parameters-->

<behavior_definition dialogID="Send Backward-dialog" category="Clip de película" name="Enviar hacia atrás" class="movieclip, graphic, button">
	<properties>
		<property id="target" default="this"/> 
	</properties>

<!--The dialog window is tied to the controls below by its id-->
<!--This controls generate the dialog using the XML to UI functionality-->

		<dialog id="Send Backward-dialog" title="Enviar hacia atrás" buttons="accept, cancel">
			<grid>
			  <columns>
			    <column>				 
				  <rows>
					<row align="center">
				      <vbox>
					    <label value="Seleccione el clip de película que desea enviar hacia atrás:"/> 
						<targetlist id="target" class="movieclip"/>
					  </vbox>
					</row>
				  </rows>
			    </column>				 
			  </columns>
			</grid>
	     </dialog>


<!-- Inside the CDATA section is where you place the Actionscript to be displayed in the AS panel-->

		<actionscript>
<![CDATA[
	//Send Backward Behavior
	mx.behaviors.DepthControl.sendBackward($target$);
	//End Behavior
]]>
		</actionscript>
	</behavior_definition>

</flash_behavior>