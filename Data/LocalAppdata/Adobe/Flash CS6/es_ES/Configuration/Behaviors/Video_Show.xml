<flash_behavior version="1.0">

<!--Below is where and how we define the behavior and its parameters-->

	<behavior_definition dialogID="Show_video-dialog" category="Vídeo incorporado" name="Mostrar">
		<!--class="frame, movieclip, button">-->
		<properties>
			<property id="target"/> 
		</properties>
	
		<!--The dialog window is tied to the controls below by its id-->
		<!--This controls generate the dialog using the XML to UI functionality-->
		
		<dialog id="Show_video-dialog" title="Mostrar vídeo" buttons="accept, cancel">
		  <grid>
		    <columns>
			  <column>
				<rows>
				  <row align="center">
				    <vbox>
					  <label value="Seleccione la instancia de vídeo que desea mostrar:"/> 
					  <targetlist id="target" tabindex="1" class="movieclip, video" required="true" requiredname="target"/>                  
					</vbox>
				  </row>
				</rows>
			  </column>
		    </columns>	
		  </grid>
		</dialog>
		<actionscript>
		
		<!-- Inside the CDATA section is where you place the Actionscript to be displayed in the AS panel-->
		
<![CDATA[
	//Show video Behavior
	$target$._visible = true;
]]>
		</actionscript>
	</behavior_definition>
</flash_behavior>